{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": [
      "node"
    ],
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "include": [
    "src/__tests__/**/*.test.ts",
    "src/__tests__/**/*.test.tsx",
    "src/__tests__/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/__tests__/**/fixtures"
  ]
}